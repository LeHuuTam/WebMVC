@model List<WebMVC.Models.Cart>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int tong = 0;
    foreach (var item in Model)
    {
        tong += item.Product1.Price * item.Quantity;
    }
}
@section jsFooter{
    <script>
        $('.removeCart').off('click').on('click', function (e) {
            e.preventDefault();
            var proId = $(this).data('id');
            $.ajax({
                url: '/Cart/Remove',
                type: 'POST',
                async: true,
                dataType: "json",
                data: { proId: proId },
                success: function (msg) {
                    if (msg.status == true) {
                        $('#row_' + proId).remove();
                        $('#total').text(msg.totalPrice);
                        $('#cartText').text('Giỏ hàng: ' + msg.totalProducts);
                        $('#cartPrice').text(msg.totalPrice + ' đ');
                    }
                    else {
                        alert('Không thể xoá');
                    }
                }
            })
        });
        $('.select').off('click').on('click', function (e) {
            var proId = $(this).data('id');
            $.ajax({
                url: '/Cart/ChangeSelected',
                type: 'POST',
                async: true,
                dataType: "json",
                data: { proId: proId },
                success: function (msg) {
                    if (msg.status == false) {
                        alert('Không thực hiện được');
                    }
                }
            })
        });
    </script>
}
<div class="span9">
    <ul class="breadcrumb">
        <li><a href="index.html">Home</a> <span class="divider">/</span></li>
        <li class="active"> SHOPPING CART</li>
    </ul>
    <h3>  Giỏ hàng <a href="products.html" class="btn btn-large pull-right"><i class="icon-arrow-left"></i> Continue Shopping </a></h3>
    <hr class="soft" />
    @if (Model.Count == 0)
    {
        <h2>Bạn chưa có sản phẩm nào trong giỏ hàng</h2>
    }
    else
    {
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Ảnh</th>
                    <th>Tên sản phẩm</th>
                    <th>Số lượng</th>
                    <th>Đơn giá</th>
                    <th>Tổng</th>
                    <th>Chọn mua</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr id="row_@item.Product1.Id">
                        <td> <img width="60" src=@item.Product1.Avatar alt="" /></td>
                        <td>@item.Product1.Name<br />Color : black, Material : metal</td>
                        <td>
                            <div class="input-append">
                                <input class="span1" style="max-width:34px" placeholder=@item.Quantity id="appendedInputButtons" size="16" type="text">
                                <button id="decrease" class="btn" type="button">
                                    <i class="icon-minus"></i>
                                </button>
                                <button id="increase" class="btn" type="button">
                                    <i class="icon-plus"></i>
                                </button>
                                <button class="btn btn-danger removeCart" type="button" data-id=@item.Product1.Id>
                                    <i class="icon-remove icon-white"></i>
                                </button>
                            </div>
                        </td>
                        <td>@item.Product1.Price đ</td>
                        <td>@(item.Quantity * item.Product1.Price) đ</td>
                        <td>
                            @{
                                var check = item.Selected == true ? "checked=\"checked\"" : null;
                            }
                            <input id=@item.Product1.Id class="select" data-id=@item.Product1.Id type="checkbox" @check style="width:20px;height:20px;margin-left:30px" />
                        </td>
                    </tr>
                }
                <tr>
                    <td colspan="5" style="text-align:right"><strong>Tổng tiền =</strong></td>
                    <td class="label label-important" style="display:block"> <strong id="total"> @tong đ </strong></td>
                </tr>
            </tbody>
        </table>
        <a id="order" href=@Url.Action("Index", "Order") class="btn btn-large pull-right">Đặt hàng <i class="icon-arrow-right"></i></a>
    }
</div>